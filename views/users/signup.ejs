<div style="min-height: 74vh;">
  

  <% layout("/layouts/boilerplate") %>


  <div class="row mt-3" >
    <div class="col-6 offset-3">
    <br>
        
        <h3>signup for website</h3>
        <br>
        <form method="post" action="/signup" novalidate class="needs-validation">
            <div class="mb-3">
              <label for="username" class="form-label">username</label>
              <input placeholder="" class="form-control" required name="username">
           
              <div class="invalid-feedback "> username should be unique</div>
             <!-- <div class="valid-feedback "> Title looks good</div> -->
            </div>
  
            <div class="mb-3">
              <label for="gmail" class="form-label">email</label>
              <input placeholder="" class="form-control" required name="email" type="email">
           
              <div class="invalid-feedback "> gmail should be valid</div>
             <!-- <div class="valid-feedback "> Title looks good</div> -->
            </div>
  
            <div class="mb-3">
              <label for="password" class="form-label">password</label>
              <input placeholder="" class="form-control" required name="password" type="password">
           
              <div class="invalid-feedback "> password should be strong</div>
             <!-- <div class="valid-feedback "> Title looks good</div> -->
            </div>
  
  
            <button class="btn btn-success">sign up</button>
  
         </form>  
  
      </div>
      
   </div>   
   
</div>
