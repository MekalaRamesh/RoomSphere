<% layout("/layouts/boilerplate") %>
<body>
 <div class="row">
    <div class="col-8 offset-2">
      <br>
      <br>
      <h3>Create New Listing</h3>
      <br>
      <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">  Title</label>
         <input placeholder="enter title" class="form-control" required name="Listing[title]">
         <div class="invalid-feedback "> Title should be strong  </div>
         <div class="valid-feedback "> Title looks good</div>
        </div>
    
        <div  class="mb-3">
          <label for="description"  class="form-label"> Description</label>
         <textarea placeholder="enter description"   class="form-control" required name="Listing[description]"></textarea>
         <div class="invalid-feedback ">Enter a brief description  </div>
        </div>
    
       

        <div  class="mb-3">
          <label for="image" class="form-label"> Image</label>
          <input placeholder=""  type="file" required class="form-control" name="Listing[image]">
          
        </div>



        <div class="row">
          <div  class="mb-3  col-4" >
            <label for="price" class="form-label">Price</label>
            <input placeholder="enter price"  required class="form-control" name="Listing[price]"  >
            <div class="invalid-feedback ">Price should be valid  </div>
          </div>
      
          <div  class="mb-3 col-8">
            <label for="country" class="form-label"> Country name</label>
           <input placeholder="enter country" required class="form-control"  name="Listing[country]">
           <div class="invalid-feedback "> Country name should be valid </div>
          </div>
        </div>
    
       
    
       <div  class="mb-3">
        <label for="Locationr" class="form-label"> Location</label>
         <input placeholder="enter location" required class="form-control" name="Listing[location]">
         <div class="invalid-feedback ">Location should be valid </div>
       </div>
        <br>
        <button class=" btn btn-dark">submit</button>
    </form>
        
    </div>
 </div>  

</body>
